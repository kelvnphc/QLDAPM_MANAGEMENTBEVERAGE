@model PPKBeverageManagement.Models.QuanLy

@{
    ViewData["Title"] = "Đăng nhập";
}
<body style="background: linear-gradient(to right, #ff7e5f, #feb47b); margin: 0; padding: 0; height: 100vh; display: block; justify-content: center; align-items: center;">
    <div class="container d-flex justify-content-center align-items-center" style="height: 100vh;">
        <div class="row justify-content-center w-100">
            <div class="col-md-8 col-lg-6 col-xl-4">
                <div class="card shadow-lg border-0 rounded-lg">
                    <div class="card-body p-4">
                        <h1 class="card-title text-center text-primary mb-4">Đăng Nhập Quản lý</h1>
                        <form asp-action="DangNhap">
                            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>
                            <div class="form-group">
                                <label asp-for="UserName" class="control-label">Tên đăng nhập</label>
                                <input asp-for="UserName" placeholder="Nhập tên đăng nhập..." class="form-control form-control-lg" />
                                <span asp-validation-for="UserName" class="text-danger"></span>
                                <span class="text-danger">@ViewData["Loil"]</span>
                            </div>
                            <div class="form-group">
                                <label asp-for="Pass" class="control-label">Mật khẩu</label>
                                <input asp-for="Pass" type="password" placeholder="Nhập mật khẩu..." class="form-control form-control-lg" />
                                <span asp-validation-for="Pass" class="text-danger"></span>
                                <span class="text-danger">@ViewData["Loi2"]</span>
                            </div>
                            <div class="form-group text-center mt-4">
                                <input type="submit" value="Đăng Nhập" class="btn btn-primary btn-lg btn-block" />
                            </div>
                            @if (ViewData["SuccessMessage"] != null)
                            {
                                <div class="alert alert-success mt-3" role="alert">
                                    @ViewData["SuccessMessage"]
                                </div>
                            }
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

    <style>
        body {
            background: linear-gradient(to right, #ff7e5f, #feb47b);
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            display: block;
        }

        .card {
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
            border-radius: 15px;
        }

        .card-body {
            background-color: #fff;
            padding: 2rem;
        }

        .card-title {
            font-size: 2rem;
            margin-bottom: 1.5rem;
            color: #333;
        }

        .btn-primary {
            background-color: #007bff;
            border-color: #007bff;
            font-size: 1.25rem;
            padding: 0.75rem 1.5rem;
            border-radius: 5px;
        }

            .btn-primary:hover {
                background-color: #0056b3;
                border-color: #004085;
            }

        .alert {
            margin-top: 1rem;
        }
    </style>
</body>
