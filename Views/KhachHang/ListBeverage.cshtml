@model IEnumerable<PPKBeverageManagement.Models.SanPham>

@{
    ViewData["Title"] = "Danh sách món";
    Layout = "_NewLayout";
}

<div class="container">
    <h1 class="text-center my-4">CHÀO MỪNG @ViewData["FullName"] ĐẾN VỚI PPK COFFEE</h1>

    <form class="mb-4" asp-action="ListBeverage" method="get">
        <div class="form-row align-items-end">
            <div class="col-md-3">
                <label for="filter1">Lọc theo tên:</label>
                <input type="text" id="filter1" name="kw" class="form-control" />
            </div>
            <div class="col-md-3">
                <label for="filter2">Lọc theo size:</label>
                <select id="filter2" name="size" class="form-control">
                    <option value="1">Nhỏ</option>
                    <option value="2">Vừa</option>
                    <option value="3">Lớn</option>
                    <option value="4">Nóng</option>
                </select>
            </div>
            <div class="col-md-3">
                <label for="filter3">Lọc theo giá:</label>
                <input type="number" id="filter3" name="gia" class="form-control" />
            </div>
            <div class="col-md-3">
                <button type="submit" class="btn btn-primary btn-block">Lọc</button>
            </div>
        </div>
    </form>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item"><a class="page-link" href="/KhachHang/ListBeverage?page=1">1</a></li>
            <li class="page-item"><a class="page-link" href="/KhachHang/ListBeverage?page=2">2</a></li>
            <li class="page-item"><a class="page-link" href="/KhachHang/ListBeverage?page=3">3</a></li>
            <li class="page-item"><a class="page-link" href="/KhachHang/ListBeverage?page=4">4</a></li>
            <li class="page-item"><a class="page-link" href="/KhachHang/ListBeverage?page=5">5</a></li>
            <li class="page-item"><a class="page-link" href="/KhachHang/ListBeverage?page=6">6</a></li>
            <li class="page-item"><a class="page-link" href="/KhachHang/ListBeverage?page=7">7</a></li>
        </ul>
    </nav>
    @if (ViewData["SuccessMessage"] != null)
    {
        <div class="alert alert-success" role="alert">
            @ViewData["SuccessMessage"]
        </div>
    }

    <table class="table table-hover table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Ảnh</th>
                <th>Tên cà phê</th>
                <th>Miêu tả</th>
                <th>Size</th>
                <th>Giá tiền</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td><img width="200px" src="@Html.DisplayFor(modelItem => item.Anh)" /></td>
                    <td>@Html.DisplayFor(modelItem => item.Ten)</td>
                    <td>@Html.DisplayFor(modelItem => item.MieuTa)</td>
                    <td>@Html.DisplayFor(modelItem => item.Size.Ten)</td>
                    <td>@Html.DisplayFor(modelItem => item.Tien)</td>
                    <td>
                        @Html.ActionLink("Thêm vào giỏ hàng", "AddToCart", "GioHang", new { id = item.Id }, new { @class = "btn btn-success btn-sm" }) |
                        @Html.ActionLink("Chi tiết", "Details", new { id = item.Id }, new { @class = "btn btn-info btn-sm" })
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <nav aria-label="Page navigation">
        <ul class="pagination justify-content-center">
            <li class="page-item"><a class="page-link" href="/KhachHang/ListBeverage?page=1">1</a></li>
            <li class="page-item"><a class="page-link" href="/KhachHang/ListBeverage?page=2">2</a></li>
            <li class="page-item"><a class="page-link" href="/KhachHang/ListBeverage?page=3">3</a></li>
            <li class="page-item"><a class="page-link" href="/KhachHang/ListBeverage?page=4">4</a></li>
            <li class="page-item"><a class="page-link" href="/KhachHang/ListBeverage?page=5">5</a></li>
            <li class="page-item"><a class="page-link" href="/KhachHang/ListBeverage?page=6">6</a></li>
            <li class="page-item"><a class="page-link" href="/KhachHang/ListBeverage?page=7">7</a></li>
        </ul>
    </nav>
</div>
<script src="https://www.gstatic.com/dialogflow-console/fast/messenger/bootstrap.js?v=1"></script>
<df-messenger intent="WELCOME"
              chat-title="CSKH-PPK-Coffee"
              agent-id="66dfadc2-e7dc-4761-9ada-f796b9eabad2"
              language-code="vi"></df-messenger>

